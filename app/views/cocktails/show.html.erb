<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.mccourier.com/wp-content/uploads/2021/01/Drinks.jpg);">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>
<div class="container mt-3">
  <div class="row">
    <div class="col-8">
      <h2>Description</h2>
      <p><%= @cocktail.description %></p>
       <%= link_to "Volver a Tragos", cocktails_path, class:"btn btn-success"  %>
    </div>
    <div class="col-4">
      <h2>Ingredients</h2>
      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li><strong><%= dose.ingredient.name %></strong> <%= dose.description %> <span><%= link_to "Delete ingredient", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %></span></li>
        <% end %>
      </ul>

      <%= render "doses/new", cocktail: @cocktail, dose: @dose %>

    </div>
        <%= render "reviews/new", cocktail: @cocktail, review: @review %>
    <div>
      <h3>Reviews</h3>
      <% if @cocktail.reviews.empty? %>
        <p> Be the first to let a Review</p>

      <% else %>
        <ul class="list-group">
        <% @cocktail.reviews.each do |review| %>
          <li class= "list-group-item d-flex justify-content-between align-items-center" >
            <span class="badge badge-primary badge-pill">
              <% counter = 0 %>
              <% 5.times do %>
                <i class ="fa <%= review.rating > counter ? 'fa-star' : 'fa-star-o' %>"></i>
                <% counter += 1 %>
              <% end %>
            </span>
            <%= review.content %>
          </li>
          <% end %>
        </ul>
        <% end %>
    </div>

  </div>
</div>
