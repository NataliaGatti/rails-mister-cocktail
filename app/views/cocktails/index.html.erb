<div class="container w-80">
  <div class="row justify-content">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-4 mt-3">
          <div >
            <% if cocktail.photo.attached? %>
            <div class="cocktail-card" style="background-image:linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)),url('<%= cl_image_path cocktail.photo.key, crop: :fill  %>')">
            <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
         <!--   <%= cl_image_tag cocktail.photo.key, class: "card-img" %> -->
            </div>
            <div>
            <%= link_to "Delete", cocktail_path(cocktail), method: :delete, data: {confirm: "Are you sure?"}  %>

            </div>
            <% else %>
            <div class="cocktail-card" style="background-image:linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)),url('https://www.mccourier.com/wp-content/uploads/2021/01/Drinks.jpg')">
            <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
            </div>
            <div>
            <%= link_to "Delete", cocktail_path(cocktail), method: :delete, data: {confirm: "Are you sure?"}  %>

            </div>

            <% end %>

        </div>
      </div>
    <% end %>
  </div>
</div>

